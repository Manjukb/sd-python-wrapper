{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Alerts",
    "type": "object",
    "properties": {
        "tags": {
            "type": "object",
            "patternProperties": {
                "^.*$": {
                    "anyOf": [
                        {"type": "string"},
                    ]
                }
            },
        },
        "subjectType": {
            "type": "string",
            "enum": ["device", "service","deviceGroup","serviceGroup"]
        },
        "subject": {
            "type": ["string", "null"]
        },
        "enabled": {
            "type": "boolean"
        },
        "section": {
        },
        "comparison": {
        },
        "value": {
        },
        "fix": {
            "type": "boolean"
        },
        "group": {
            "type": "string"
        },
        "recipients": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "type": {
                        "type": "string",
                        "enum": ["user", "pagerduty", "webhook","hipchat","tag"]
                    },
                    "id": {
                        "type": "string"
                    },
                    "actions": {
                        "type": "array",
                        "items": {
                            "type": "string",
                            "enum": [
                                "pagerduty",
                                "webhook",
                                "slack",
                                "hipchat",
                                "sms",
                                "email"
                            ]
                        }
                    }
                },
                "required": ["type", "id"]
            }
        },
        "wait": {
            "type": "object",
            "properties": {
                "seconds": {
                    "type": "number"
                },
                "enabled": {
                    "type": "boolean"
                },
                "displayUnits": {
                    "type": "string",
                    "enum": ["s","m"]
                }
            },
            "required": ["seconds", "enabled", "displayUnits"]
        },
        "repeat": {
            "type": "object",
            "properties": {
                "seconds": {
                    "type": "number"
                },
                "enabled": {
                    "type": "boolean"
                },
                "displayUnits": {
                    "type": "string",
                    "enum": ["s","m"]
                }
            },
            "required": ["seconds", "enabled", "displayUnits"]
        }
    },
    "required": [
        "enabled",
        "recipients",
        "wait",
        "repeat",
        "fix"
    ]
}
